Type: Package
Package: getCRUCLdata
Title: 'CRU' 'CL' v. 2.0 Climatology Client
Version: 1.0.3
Authors@R: c(
    person("Adam H.", "Sparks", , "adamhsparks@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-0061-8359")),
